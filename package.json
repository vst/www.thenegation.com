{
  "name": "thenegation",
  "version": "2.0.0",
  "description": "vst's Personal Website",
  "author": "Vehbi Sinan Tunalioglu",
  "license": "CC-BY-SA-4.0",
  "homepage": "https://github.com/vst/www.thenegation.com#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vst/www.thenegation.com.git"
  },
  "bugs": {
    "url": "https://github.com/vst/www.thenegation.com/issues"
  },
  "private": true,
  "scripts": {
    "dev": "hugo server",
    "format:prettier": "prettier --write .",
    "format:taplo": "taplo fmt",
    "format": "npm run format:prettier && npm run format:taplo",
    "lint:taplo": "taplo check",
    "lint": "npm run lint:taplo",
    "check:format:prettier": "prettier --check .",
    "check:format:taplo": "taplo fmt --check",
    "check:format": "npm run check:format:prettier && npm run check:format:taplo",
    "check": "npm run check:format && npm run lint && npm run build",
    "build:hugo": "hugo build --gc --minify",
    "build:pagefind": "npx -y pagefind --site public",
    "build": "npm run build:hugo && npm run build:pagefind"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.16",
    "@tailwindcss/typography": "^0.5.19",
    "prettier": "^3.6.2",
    "prettier-plugin-go-template": "^0.0.15",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4.1.16"
  },
  "prettier": {
    "printWidth": 80,
    "proseWrap": "always",
    "plugins": [
      "prettier-plugin-go-template",
      "prettier-plugin-tailwindcss"
    ],
    "overrides": [
      {
        "files": [
          "*.html"
        ],
        "options": {
          "parser": "go-template",
          "goTemplateBracketSpacing": true,
          "bracketSameLine": true
        }
      },
      {
        "files": [
          "*.js",
          "*.ts"
        ],
        "options": {
          "useTabs": false,
          "singleQuote": false
        }
      }
    ]
  }
}
